{
  "name": "generator-jhipster-<%= moduleName %>",
  "version": "0.0.0",
  "description": "<%= moduleDescription %>",
  "keywords": [
    "yeoman-generator",
    "jhipster-blueprint",
    "jhipster-5"
  ],
  "homepage": "https://github.com/<%= githubName %>/generator-jhipster-<%= moduleName %>",
  "author": {
    "name": "<%= authorName %>",
    "email": "<%= authorEmail %>",
    "url": "<%= authorUrl %>"
  },
  "files": [
    "generators"
  ],
  "main": "generators/app/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/<%= githubName %>/generator-jhipster-<%= moduleName %>.git"
  },
  "dependencies": {
    "chalk": "2.4.1",
    "generator-jhipster": ">=5.0.0"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "ejs-lint": "0.3.0",
    "eslint": "5.0.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.12.0",
    "fs-extra": "6.0.1",
    "jsdoc": "3.5.5",
    "mocha": "5.2.0",
    "prettier": "1.13.5",
    "sinon": "6.0.0",
    "yeoman-assert": "3.1.1",
    "yeoman-test": "1.7.2"
  },
  "scripts": {
    "lint": "eslint .",
    "lint-fix": "npm run lint -- --fix",
    "pretest": "npm run lint",
    "test": "npm run test:unit -- test/*.spec.js",
    "test:unit": "mocha --timeout 20000 --slow 0 --reporter spec",
    "jsdoc": "jsdoc --configure jsdoc-conf.json",
    "release": "git push && git push --tags && npm publish",
    "release:patch": "npm version patch -a -m \"Update to %s\" && npm run release",
    "release:minor": "npm version minor -a -m \"Update to %s\" && npm run release",
    "release:major": "npm version major -a -m \"Update to %s\" && npm run release"
  },
  <%_ if (license === 'apache') { _%>
  "license": "Apache-2.0",
  <%_ } else if (license === 'gpl') { _%>
  "license": "GPL-3.0",
  <%_ } else if (license === 'mit') { _%>
  "license": "MIT",
  <%_ } _%>
  "bugs": {
    "url": "https://github.com/<%= githubName %>/generator-jhipster-<%= moduleName %>/issues"
  }
}
